{
    "manifest_version": 2,
    "name": "Accents",
    "description": "Simple write the accents above the letters by pressing F2",
    "version": "1.0",
    "browser_action": {
        "default_icon": "off-32.png",
        "default_title": "Accents"
    },
	"background": {
		"page": "background.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["scripts/content.js"],
		"run_at": "document_idle"
    }],
    "permissions": [
        "activeTab",
		"storage",
		"tabs"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}

